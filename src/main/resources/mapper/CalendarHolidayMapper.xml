<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.CalendarHolidayMapper">

    <resultMap id="CalendarHolidayResult" type="com.example.demo.model.CalendarHoliday">
        <id property="id" column="id"/>
        <result property="holidayDate" column="holiday_date"/>
        <result property="name" column="name"/>
        <result property="year" column="year"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectByYear" resultMap="CalendarHolidayResult">
        SELECT
            *
        FROM
            calendar_holidays
        WHERE
            year =
            #{year}
        ORDER BY holiday_date ASC
    </select>

    <select id="selectByDateRange" resultMap="CalendarHolidayResult">
        SELECT
            *
        FROM
            calendar_holidays
        WHERE
            holiday_date BETWEEN #{from} AND #{to}
        ORDER BY
            holiday_date ASC
    </select>

    <select id="selectByDate" resultMap="CalendarHolidayResult">
        SELECT
            *
        FROM
            calendar_holidays
        WHERE
            holiday_date = #{holidayDate}
    </select>

    <insert id="insert" parameterType="com.example.demo.model.CalendarHoliday" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            calendar_holidays (holiday_date, name, year)
        VALUES
            (#{holidayDate}, #{name}, #{year})
    </insert>

    <update id="update" parameterType="com.example.demo.model.CalendarHoliday">
        UPDATE calendar_holidays
        SET
            name         = #{name}
            , updated_at = NOW()
        WHERE
            id = #{id}
    </update>

    <delete id="deleteById">
        DELETE
        FROM
            calendar_holidays
        WHERE
            id = #{id}
    </delete>

</mapper>

